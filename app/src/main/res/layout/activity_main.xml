<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobymagic.fancycirclemenu.MainActivity">

    <FrameLayout
        android:id="@+id/menu_center"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/ic_circle_stroke_white"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

    <View
        android:id="@+id/top_left_placeholder"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_toLeftOf="@id/menu_center"
        android:layout_toStartOf="@id/menu_center"
        android:layout_above="@id/menu_center"
        android:visibility="invisible" />

    <View
        android:id="@+id/top_right_placeholder"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_toRightOf="@id/menu_center"
        android:layout_toEndOf="@id/menu_center"
        android:layout_above="@id/menu_center"
        android:visibility="invisible" />

    <View
        android:id="@+id/bottom_left_placeholder"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_toLeftOf="@id/menu_center"
        android:layout_toStartOf="@id/menu_center"
        android:layout_below="@id/menu_center"
        android:visibility="invisible" />

    <View
        android:id="@+id/bottom_right_placeholder"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_toRightOf="@id/menu_center"
        android:layout_toEndOf="@id/menu_center"
        android:layout_below="@id/menu_center"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/ic_cloud_circle_white_24dp"
        android:layout_centerInParent="true"
        app:elevation="4dp"
        app:backgroundTint="@color/colorGreenAccent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/invitation_inbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/ic_add_circle_white_24dp"
        android:layout_centerInParent="true"
        app:elevation="4dp"
        app:backgroundTint="@color/colorOrangeAccent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/invite_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/ic_account_circle_white_24dp"
        android:layout_centerInParent="true"
        app:elevation="4dp"
        app:backgroundTint="@color/colorBlueAccent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/quick_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/ic_play_circle_filled_white_24dp"
        android:layout_centerInParent="true"
        app:elevation="4dp"
        app:backgroundTint="@color/colorRedAccent" />

</RelativeLayout>
